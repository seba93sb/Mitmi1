<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#32473d</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#167ade</item>
    </style>

    <style name="editText_style">
         <item name="android:gravity">center</item>
         <item name="android:background">@drawable/edittext_background</item>
         <item name="android:layout_margin">10dp</item>
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:ems">20</item>
    </style>

    <style name="LogInbutton_background">
        <item name="android:background">@drawable/loginbutton_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textView_LogIn_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#bfd4ed</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
